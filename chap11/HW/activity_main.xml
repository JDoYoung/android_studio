<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/pillar1"
        android:layout_width="100dp"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/pillar" />

    <ImageView
        android:id="@+id/pillar2"
        android:layout_width="100dp"
        android:layout_height="1000dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/pillar1"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/pillar" />

    <ImageView
        android:id="@+id/pillar3"
        android:layout_width="100dp"
        android:layout_height="1000dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/pillar2"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/pillar" />

    <ImageView
        android:id="@+id/square1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/pillar1"
        android:layout_alignRight="@id/pillar1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="302dp"
        android:src="@drawable/square" />

    <ImageView
        android:id="@+id/square2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_above="@id/square1"
        android:layout_alignLeft="@id/pillar1"
        android:layout_alignRight="@id/pillar1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-7dp"
        android:src="@drawable/square" />

    <ImageView
        android:id="@+id/square3"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_above="@id/square2"
        android:layout_alignLeft="@id/pillar1"
        android:layout_alignRight="@id/pillar1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="-6dp"
        android:src="@drawable/square" />

</RelativeLayout>